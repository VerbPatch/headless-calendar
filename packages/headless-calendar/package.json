{
  "name": "@verbpatch/headless-calendar",
  "version": "0.0.1-beta.11",
  "description": "A headless calendar library for JavaScript applications with full event management and drag-and-drop support.",
  "author": "Rameez Raja <rameezrajapathan@live.com>",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/verbpatch/headless-calendar",
  "repository": {
    "type": "git",
    "url": "https://github.com/verbpatch/headless-calendar.git",
    "directory": "packages/headless-calendar"
  },
  "bugs": {
    "url": "https://github.com/verbpatch/headless-calendar/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "browser": "./dist/index.umd.js"
    },
    "./constants": {
      "types": "./dist/constants/index.d.ts",
      "import": "./dist/constants/index.js",
      "require": "./dist/constants/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE.md"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "rollup -c",
    "test": "vitest run --coverage",
    "dev": "rollup -c -w",
    "docs": "typedoc",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "size": "pnpm run build && size-limit",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "verbpatch",
    "calendar",
    "headless",
    "events",
    "drag-drop",
    "typescript",
    "gpl"
  ],
  "size-limit": [
    {
      "path": "dist/*.js"
    }
  ]
}
