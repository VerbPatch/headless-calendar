{
  "name": "@verbpatch/react-calendar",
  "version": "0.0.1-beta.5",
  "description": "A headless calendar library for react applications with full event management and drag-and-drop support",
  "author": "Rameez Raja <rameezrajapathan@live.com>",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/verbpatch/headless-calendar",
  "repository": {
    "type": "git",
    "url": "https://github.com/verbpatch/headless-calendar.git",
    "directory": "packages/react-calendar"
  },
  "bugs": {
    "url": "https://github.com/verbpatch/headless-calendar/issues"
  },
  "type": "module",
  "module": "dist/index.esm.js",
  "main": "dist/index.cjs.js",
  "types": "dist/index.d.ts",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=14.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "keywords": [
    "react",
    "calendar",
    "headless",
    "events",
    "drag-drop",
    "scheduler",
    "typescript"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "rollup -c",
    "dev": "rollup -c -w"
  },
  "dependencies": {
    "@verbpatch/headless-calendar": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.3.3"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "packageManager": "pnpm@10.18.3"
}
