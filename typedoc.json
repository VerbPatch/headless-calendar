{
  "$schema": "https://typedoc.org/schema.json",
  "name": "Headless Calendar",
  "entryPointStrategy": "packages",
  "entryPoints": ["./packages/headless-calendar"],
  "packageOptions": {
    "entryPoints": ["src/index.ts"]
  },

  "includeVersion": false,
  "exclude": ["node_modules", "examples"],
  "plugin": ["typedoc-plugin-markdown", "./scripts/remove-md-extension.mjs"],

  "router": "group",
  "out": "./docs/api",
  "headings": {
    "readme": false,
    "document": false
  },
  "publicPath": "https://verbpatch.com/calendar/docs/api",
  "navigationJson": "docs/api/navigation.json",
  "entryFileName": "calendar",
  "hidePageHeader": true,
  "hidePageTitle": false,
  "hideBreadcrumbs": true,
  "readme": "none",
  "mergeReadme": false
}
