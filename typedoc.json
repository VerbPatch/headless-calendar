{
  "$schema": "https://typedoc.org/schema.json",
  "name": "Headless Calendar",
  "entryPointStrategy": "packages",
  "entryPoints": ["./packages/headless-calendar"],
  "packageOptions": {
    "entryPoints": ["src/index.ts"]
  },
  "includeVersion": false,
  "exclude": ["node_modules", "examples"],
  "plugin": [
    "typedoc-plugin-markdown",
    "typedoc-plugin-frontmatter",
    "./scripts/setup-api-doc.mjs"
  ],
  "router": "group",
  "out": "./docs/api",
  "sort": ["source-order"],
  "headings": {
    "readme": false,
    "document": false
  },
  "publicPath": "/calendar/docs/api",
  "navigationJson": "docs/navigation.json",
  "entryFileName": "calendar",
  "hidePageHeader": true,
  "hidePageTitle": false,
  "hideBreadcrumbs": true,
  "readme": "none",
  "mergeReadme": false,
  "frontmatterCommentTags": ["title", "description"],
  // "frontmatterGlobals": {
  //   "author": "Rameez Raja"
  // }
  "pageTitleTemplates": {
    "member": "{name}"
  }
}
